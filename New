<!DOCTYPE html>
<html>
    <head>
        <title>class</title>
    </head>
    <body>
        <p id="hello"></p>
        <p id="hi"></p>
        <p id="welcome"></p>
        <script>
            class Learner {
                constructor(name) {
                    this.studentname = name;
                }
                static hello() {
                    return "Hello!!";
                }
                static welcome(x) {
                    return "Welcome " + x.studentname;
                }
                hi() {
                    return "Hi " + this.studentname;
                }
            }
            myname = new Learner("Bob");
            document.getElementById("hello").innerHTML = Learner.hello();
            document.getElementById("hi").innerHTML = myname.hi();
            document.getElementById("welcome").innerHTML = Learner.welcome(myname);
        </script>
    </body>
</html>
